<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/_37dp"
        android:layout_height="@dimen/_37dp"
        android:layout_marginStart="@dimen/_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_fab_scut"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/option_name"
        android:layout_width="0dp"
        tools:text="Floating Shortcut"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_height="wrap_content"
        style="@style/open_sans_semi_bold_14"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintEnd_toStartOf="@id/trailing_icon"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/trailing_icon"
        style="@style/Custom.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_4dp"
        android:theme="@style/Custom.Switch"
        app:layout_constraintBottom_toBottomOf="@id/option_name"
        app:layout_constraintTop_toTopOf="@id/option_name"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>