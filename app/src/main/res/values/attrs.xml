<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlideButtonView">
        <attr name="initialText" format="string"/>
        <attr name="doneText" format="string"/>
        <attr name="sliderIcon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ImageCarousel">

        <attr name="showCaption" format="boolean" />
        <attr name="captionMargin" format="dimension" />
        <attr name="captionTextSize" format="dimension" />

        <attr name="showSubTitle" format="boolean" />
        <attr name="subtitleMargin" format="dimension" />
        <attr name="subtitleTextSize" format="dimension" />

        <attr name="showIndicator" format="boolean" />
        <attr name="indicatorMargin" format="dimension" />

        <attr name="imageScaleType" format="enum">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>

        <attr name="carouselBackground" format="reference|color" />
        <attr name="imagePlaceholder" format="reference|color" />

        <attr name="carouselPadding" format="dimension" />
        <attr name="carouselPaddingStart" format="dimension" />
        <attr name="carouselPaddingTop" format="dimension" />
        <attr name="carouselPaddingEnd" format="dimension" />
        <attr name="carouselPaddingBottom" format="dimension" />

        <attr name="carouselType" format="enum">
            <enum name="BLOCK" value="0" />
            <enum name="SHOWCASE" value="1" />
        </attr>

        <attr name="carouselGravity" format="enum">
            <enum name="START" value="0" />
            <enum name="CENTER" value="1" />
        </attr>

        <attr name="scaleOnScroll" format="boolean" />
        <attr name="scalingFactor" format="float" />
        <attr name="autoWidthFixing" format="boolean" />
        <attr name="autoPlay" format="boolean" />
        <attr name="autoPlayDelay" format="integer" />
        <attr name="infiniteCarousel" format="boolean" />
        <attr name="touchToPause" format="boolean" />

    </declare-styleable>


    <declare-styleable name="BaseIndicator">
        <attr name="ci_width" format="dimension"/>
        <attr name="ci_height" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_animator" format="reference"/>
        <attr name="ci_animator_reverse" format="reference"/>
        <attr name="ci_drawable" format="reference"/>
        <attr name="ci_drawable_unselected" format="reference"/>

        <attr name="ci_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="ci_gravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>

    </declare-styleable>

</resources>