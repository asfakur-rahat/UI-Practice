<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.UI_Practice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnSecondary">#A8A9AD</item>
        <item name="android:colorBackground">#F3F3F3</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheet</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.UI_Practice" parent="Base.Theme.UI_Practice"/>


    <style name="CustomBottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundUpperCorner</item>
    </style>
    <style name="RoundUpperCorner" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/UpperRoundCorner</item>
    </style>
    <style name="UpperRoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="CornerCut" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">11.5%</item>
        <item name="cornerSizeTopRight">11.5%</item>
        <item name="cornerSizeBottomLeft">11.5%</item>
        <item name="cornerSizeBottomRight">11.5%</item>
    </style>

    <style name="Custom.Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#3DAE72</item>
        <item name="colorSwitchThumbNormal">#ECECEC</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="open_sans_semi_bold_16">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">#B3000000</item>
        <item name="android:textSize">@dimen/_sp8</item>
    </style>

    <style name="open_sans_regular_18">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_sp10</item>
    </style>

    <style name="open_sans_regular_14">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_sp6</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="open_sans_semi_bold_14">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_sp6</item>
    </style>

    <style name="open_sans_semi_bold_14Black70">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">#B3000000</item>
        <item name="android:textSize">@dimen/_sp6</item>
    </style>

    <style name="open_sans_semi_bold_22">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_sp12</item>
    </style>

    <style name="open_sans_semi_bold_12">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_sp4</item>
    </style>

    <style name="open_sans_regular_22">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_sp12</item>
    </style>

    <style name="open_sans_semi_bold_18_white">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_sp10</item>
    </style>
    <style name="open_sans_semi_bold_18_black">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_sp10</item>
    </style>



    <style name="NoUnderlineTextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorHint">#4D000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>


</resources>